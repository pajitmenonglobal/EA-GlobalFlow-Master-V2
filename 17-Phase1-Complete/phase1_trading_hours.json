  "emergency_protocols": {
    "description": "Emergency trading hour modifications",
    
    "market_disruption": {
      "circuit_breaker_response": {
        "level_1": {
          "pause_duration": 15,
          "action": "pause_new_orders"
        },
        "level_2": {
          "pause_duration": 60,
          "action": "close_risky_positions"
        },
        "level_3": {
          "pause_duration": "market_close",
          "action": "emergency_exit_all"
        }
      },
      "technical_halt": {
        "response_time": 30,
        "action": "switch_to_backup_feed"
      },
      "api_failure": {
        "response_time": 60,
        "action": "activate_backup_broker"
      }
    },
    
    "force_majeure": {
      "natural_disaster": {
        "action": "immediate_shutdown",
        "notification": "all_channels"
      },
      "geopolitical_event": {
        "action": "risk_reduction",
        "position_limit": "50_percent"
      },
      "cyber_security_threat": {
        "action": "emergency_stop",
        "isolation": "complete"
      }
    }

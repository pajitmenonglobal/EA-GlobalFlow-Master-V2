  "smma_50": {
    "indicator_name": "Smoothed Moving Average 50",
    "category": "MOVING_AVERAGE",
    "priority": "PRIMARY", 
    "timeframes": ["DAILY", "4H", "1H", "30M", "15M", "5M"],
    "parameters": {
      "period": 50,
      "smoothing_method": "SMMA",
      "price_applied": "CLOSE"
    },
    "calculation_method": {
      "formula": "SMMA = (SMMA_prev * (n-1) + Current_Price) / n",
      "where": "n = 50 periods",
      "initial_value": "SMA of first 50 periods"
    },
    "signal_interpretation": {
      "trend_direction": {
        "bullish": "Price above SMMA 50 and SMMA rising",
        "bearish": "Price below SMMA 50 and SMMA falling",
        "sideways": "Price around SMMA with flat slope"

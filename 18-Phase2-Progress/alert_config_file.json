          "message_template": "VIX SPIKE: {vix_change_percent}% increase to {current_vix}"
        },
        "correlation_breach": {
          "enabled": true,
          "priority": "medium",
          "sound_file": "correlation_alert.wav",
          "channels": ["desktop", "email"],
          "delay_seconds": 0,
          "correlation_threshold": 0.8,

    "risk_alerts": {
      "description": "Risk management and limit-related alerts",
      "enabled": true,
      "priority": "critical",
      "channels": ["sound", "desktop", "email", "sms", "whatsapp"],
      "sound_enabled": true,
      "volume": 1.0,
      
      "subcategories": {
        "daily_loss_limit": {
          "enabled": true,
          "priority": "critical",
          "sound_file": "risk_critical.wav",
          "channels": ["sound", "desktop", "email", "sms", "whatsapp"],
          "delay_seconds": 0,
          "thresholds": {
            "warning": 70,
            "concern": 85,
            "critical": 95
          },
          "message_templates": {
            "warning": "Daily loss at {percent}% of limit. Current: ₹{current_loss}",
            "concern": "CONCERN: Daily loss at {percent}% of limit. Current: ₹{current_loss}",
            "critical": "CRITICAL: Daily loss limit breached! Loss: ₹{current_loss}"
          }
        },
        "drawdown_alert": {
          "enabled": true,
          "priority": "critical",
          "sound_file": "drawdown_alert.wav",
          "channels": ["sound", "desktop", "email", "sms"],
          "delay_seconds": 0,
          "thresholds": {
            "warning": 5,
            "concern": 7,
            "critical": 10
          },
          "message_templates": {
            "warning": "Drawdown alert: {drawdown_percent}% from peak",
            "concern": "CONCERN: High drawdown {drawdown_percent}% from peak",
            "critical": "CRITICAL: Maximum drawdown {drawdown_percent}% reached!"
          }
        },
        "margin_utilization": {
          "enabled": true,
          "priority": "high",
          "sound_file": "margin_alert.wav",
          "channels": ["sound", "desktop", "email"],
          "delay_seconds": 0,
          "thresholds": {
            "warning": 70,
            "concern": 85,
            "critical": 95
          },
          "message_templates": {
            "warning": "Margin utilization: {utilization_percent}%",
            "concern": "High margin utilization: {utilization_percent}%",
            "critical": "CRITICAL: Margin utilization {utilization_percent}%"
          }
        },
        "vix_spike": {
          "enabled": true,
          "priority": "high",
          "sound_file": "vix_spike.wav",
          "channels": ["sound", "desktop", "email"],
          "delay_seconds": 0,

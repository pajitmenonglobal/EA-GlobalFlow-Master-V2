{
  "_metadata": {
    "version": "1.0.0",
    "created": "2024-08-05",
    "description": "EA GlobalFlow Pro v0.1 - Dashboard Layout Configuration",
    "author": "EA GlobalFlow Development Team",
    "layout_system": "Responsive Grid with Dynamic Panels",
    "last_updated": "2024-08-05T10:00:00Z"
  },
  
  "layout_system": {
    "description": "Global layout management system",
    "default_layout": "trading_focused_4panel",
    "responsive_design": true,
    "drag_drop_enabled": true,
    "panel_resizing": true,
    "layout_persistence": true,
    "layout_templates": 8,
    "custom_layouts_allowed": true,
    "max_custom_layouts": 5
  },
  
  "screen_configurations": {
    "description": "Screen size and resolution configurations",
    
    "breakpoints": {
      "mobile": {
        "min_width": 320,
        "max_width": 767,
        "columns": 1,
        "default_layout": "mobile_compact"
      },
      "tablet": {
        "min_width": 768,
        "max_width": 1023,
        "columns": 2,
        "default_layout": "tablet_dual_panel"
      },
      "desktop": {
        "min_width": 1024,
        "max_width": 1439,
        "columns": 3,
        "default_layout": "desktop_triple_panel"
      },
      "wide_desktop": {
        "min_width": 1440,
        "max_width": 1919,
        "columns": 4,
        "default_layout": "trading_focused_4panel"
      },
      "ultra_wide": {
        "min_width": 1920,
        "max_width": 3840,
        "columns": 6,
        "default_layout": "ultra_wide_6panel"
      }
    },
    
    "recommended_resolutions": {
      "minimum": "1280x720",
      "optimal": "1920x1080",
      "premium": "2560x1440",
      "ultra": "3840x2160"
    }
  },
  
  "layout_templates": {
    "description": "Pre-defined layout templates",
    
    "trading_focused_4panel": {
      "name": "Trading Focused 4-Panel",
      "description": "Optimized layout for active trading with F&O focus",
      "type": "grid",
      "columns": 4,
      "rows": 3,
      "responsive": true,
      "default": true,
      
      "panels": {
        "market_overview": {
          "position": {"col": 1, "row": 1, "colspan": 2, "rowspan": 1},
          "component": "market_overview_widget",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 400,
          "min_height": 200
        },
        "vix_risk_monitor": {
          "position": {"col": 3, "row": 1, "colspan": 2, "rowspan": 1},
          "component": "vix_risk_widget",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 300,
          "min_height": 200
        },
        "fno_scanner": {
          "position": {"col": 1, "row": 2, "colspan": 1, "rowspan": 2},
          "component": "fno_scanner_widget",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 300,
          "min_height": 400
        },
        "secondary_charts": {
          "position": {"col": 2, "row": 2, "colspan": 2, "rowspan": 2},
          "component": "dynamic_charts_grid",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 600,
          "min_height": 400
        },
        "trading_controls": {
          "position": {"col": 4, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "trading_controls_widget",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 250,
          "min_height": 200
        },
        "positions_pnl": {
          "position": {"col": 4, "row": 3, "colspan": 1, "rowspan": 1},
          "component": "positions_pnl_widget",
          "resizable": true,
          "movable": true,
          "closable": false,
          "min_width": 250,
          "min_height": 200
        }
      }
    },
    
    "analytics_focused_6panel": {
      "name": "Analytics Focused 6-Panel",
      "description": "Layout optimized for market analysis and research",
      "type": "grid",
      "columns": 6,
      "rows": 3,
      "responsive": true,
      "default": false,
      
      "panels": {
        "market_overview": {
          "position": {"col": 1, "row": 1, "colspan": 3, "rowspan": 1},
          "component": "expanded_market_overview"
        },
        "economic_calendar": {
          "position": {"col": 4, "row": 1, "colspan": 2, "rowspan": 1},
          "component": "economic_calendar_widget"
        },
        "vix_analysis": {
          "position": {"col": 6, "row": 1, "colspan": 1, "rowspan": 1},
          "component": "vix_detailed_analysis"
        },
        "main_chart": {
          "position": {"col": 1, "row": 2, "colspan": 4, "rowspan": 2},
          "component": "advanced_trading_chart"
        },
        "scanner_results": {
          "position": {"col": 5, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "comprehensive_scanner"
        },
        "trade_analysis": {
          "position": {"col": 6, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "trade_analysis_widget"
        },
        "performance_metrics": {
          "position": {"col": 5, "row": 3, "colspan": 2, "rowspan": 1},
          "component": "performance_dashboard"
        }
      }
    },
    
    "mobile_compact": {
      "name": "Mobile Compact",
      "description": "Optimized for mobile devices with essential controls",
      "type": "stack",
      "columns": 1,
      "responsive": true,
      "scrollable": true,
      
      "panels": {
        "mobile_header": {
          "position": {"order": 1},
          "component": "mobile_header_widget",
          "fixed": true,
          "height": 60
        },
        "quick_overview": {
          "position": {"order": 2},
          "component": "mobile_overview_widget",
          "collapsible": true,
          "height": 150
        },
        "positions_summary": {
          "position": {"order": 3},
          "component": "mobile_positions_widget",
          "collapsible": true,
          "height": 200
        },
        "trading_controls": {
          "position": {"order": 4},
          "component": "mobile_trading_controls",
          "collapsible": false,
          "height": 250
        },
        "alerts_notifications": {
          "position": {"order": 5},
          "component": "mobile_alerts_widget",
          "collapsible": true,
          "height": 150
        }
      }
    },
    
    "risk_management_focus": {
      "name": "Risk Management Focus",
      "description": "Layout emphasizing risk monitoring and control",
      "type": "grid",
      "columns": 4,
      "rows": 4,
      "responsive": true,
      
      "panels": {
        "risk_dashboard": {
          "position": {"col": 1, "row": 1, "colspan": 4, "rowspan": 1},
          "component": "comprehensive_risk_dashboard"
        },
        "vix_monitor": {
          "position": {"col": 1, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "vix_risk_monitor"
        },
        "position_risk": {
          "position": {"col": 2, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "position_risk_analysis"
        },
        "correlation_matrix": {
          "position": {"col": 3, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "correlation_heatmap"
        },
        "exposure_breakdown": {
          "position": {"col": 4, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "sector_exposure_chart"
        },
        "drawdown_analysis": {
          "position": {"col": 1, "row": 3, "colspan": 2, "rowspan": 1},
          "component": "drawdown_analysis_chart"
        },
        "var_stress_testing": {
          "position": {"col": 3, "row": 3, "colspan": 2, "rowspan": 1},
          "component": "var_stress_test_widget"
        },
        "emergency_controls": {
          "position": {"col": 1, "row": 4, "colspan": 4, "rowspan": 1},
          "component": "emergency_risk_controls"
        }
      }
    },
    
    "forex_cfd_layout": {
      "name": "Forex & CFD Layout",
      "description": "Optimized for forex and CFD trading",
      "type": "grid",
      "columns": 5,
      "rows": 3,
      "responsive": true,
      
      "panels": {
        "forex_overview": {
          "position": {"col": 1, "row": 1, "colspan": 3, "rowspan": 1},
          "component": "forex_market_overview"
        },
        "economic_calendar": {
          "position": {"col": 4, "row": 1, "colspan": 2, "rowspan": 1},
          "component": "forex_economic_calendar"
        },
        "currency_scanner": {
          "position": {"col": 1, "row": 2, "colspan": 1, "rowspan": 2},
          "component": "forex_currency_scanner"
        },
        "main_chart": {
          "position": {"col": 2, "row": 2, "colspan": 3, "rowspan": 2},
          "component": "forex_trading_chart"
        },
        "trading_controls": {
          "position": {"col": 5, "row": 2, "colspan": 1, "rowspan": 1},
          "component": "forex_trading_controls"
        },
        "position_manager": {
          "position": {"col": 5, "row": 3, "colspan": 1, "rowspan": 1},
          "component": "forex_position_manager"
        }
      }
    }
  },
  
  "widget_components": {
    "description": "Available widget components for layouts",
    
    "market_data_widgets": {
      "market_overview_widget": {
        "name": "Market Overview",
        "description": "NIFTY, BANKNIFTY, and major indices",
        "min_size": {"width": 300, "height": 150},
        "preferred_size": {"width": 400, "height": 200},
        "data_sources": ["nse", "bse"],
        "update_frequency": 1000
      },
      "vix_risk_widget": {
        "name": "VIX Risk Monitor", 
